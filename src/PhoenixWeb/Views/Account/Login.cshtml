@{
    Layout = "_LayoutLogin";
}

@model Account.AccountLoginViewModel;

<div class="container">
    <h3>Phoenix</h3>
    <div class="login">
        <form method="post" class="form-login">
            <div class="login-space">
                <span id="alert-input">@ViewBag.Message</span>
                <div>
                    <div>
                        <input asp-for="@Model.Username" type="text" placeholder="Username">
                    </div>
                    <span id="alert-input" asp-validation-for="@Model.Username"></span>
                </div>
                <div>
                    <div>
                        <input asp-for="@Model.Password" type="password" placeholder="Password">
                    </div>
                    <span id="alert-input" asp-validation-for="@Model.Password"></span>
                </div>
                <div>
                    <div>
                        <select asp-for="@Model.Role">
                            @foreach(var item in @Model.Roles)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                    <span id="alert-input" asp-validation-for="@Model.Role"></span>
                </div>
                <div>
                    <button type="submit">Log in</button>
                </div>
                <div>
                    <a asp-controller="Guest" asp-action="Register">Register As Guest</a>
                </div>
            </div>
        </form>
    </div>
</div>

